<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <button name="button_validate" position="before">
                <button name="%(select_deli_carrier_wizard_acton)d"
                        class="btn btn-primary"
                        type="action"
                        attrs="{'invisible': [('state', '!=', 'assigned')]}"
                        string="Assign to delivery"
                />
            </button>
            <xpath expr="//group[@name='carrier_data']" position="attributes">
                <attribute name="attrs">{'invisible': [('carrier_id', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>