<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_form_view_inherit_for_webhook" model="ir.ui.view">
        <field name="name">res.partner.form.view.inherit.webhook</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Webhook Configuration" attrs="{'invisible': [('type', '!=', 'webhook_service')]}">
                    <button name="get_access_token" type="object" class="oe_highlight" string="Get Access Token"/>
                    <group>
                        <field name="token" readonly="1" widget="CopyClipboardChar"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>